{
  "name": "ytake/laravel-aspect",
  "description": "Aspect Oriented Programming library for laravel framework, and lumen",
  "minimum-stability": "dev",
  "license": "MIT",
  "keywords": [
    "laravel",
    "aspect",
    "transaction",
    "cache",
    "logger"
  ],
  "authors": [
    {
      "name": "Yuuki Takezawa",
      "email": "yuuki.takezawa@comnect.jp.net"
    }
  ],
  "require": {
    "php": "^7.0",
    "illuminate/console": "^5.5",
    "illuminate/filesystem": "^5.5",
    "illuminate/support": "^5.5",
    "illuminate/config": "^5.5",
    "illuminate/contracts": "^5.5",
    "illuminate/log": "^5.5",
    "illuminate/database": "^5.5",
    "illuminate/cache": "^5.5",
    "illuminate/events": "^5.5",
    "illuminate/bus": "^5.5",
    "illuminate/queue": "^5.5",
    "ray/aop": "^2.0@stable",
    "nikic/php-parser": "^2.0@stable",
    "doctrine/annotations": "^1.0@stable"
  },
  "require-dev": {
    "symfony/framework-bundle": "~3.0",
    "symfony/console": "~3.0",
    "phpunit/phpunit": "~5.0",
    "mockery/mockery": "*",
    "satooshi/php-coveralls": "*",
    "sebastian/phpcpd": "*",
    "phploc/phploc": "*",
    "pdepend/pdepend" : "^2.2.4",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "~2.7",
    "illuminate/encryption":"^5.5"
  },
  "autoload": {
    "psr-4": {
      "Ytake\\LaravelAspect\\": "src"
    }
  },
  "autoload-dev": {
    "files": [
      "tests/AspectTestCase.php",
      "tests/helper.php",
      "tests/MockApplication.php",
      "tests/ResolveMockInterface.php",
      "tests/ResolveMockClass.php"
    ],
    "psr-4": {
      "__Test\\": "tests/src"
    }
  },
  "suggest": {
    "ext-pcntl": "*"
  },
  "scripts": {
    "quality-assurance": [
      "./vendor/bin/phpunit",
      "./vendor/bin/phpcpd src/",
      "./vendor/bin/phploc src/ --log-xml=tests/logs/quality-assurance/phploc.xml"
    ],
    "phpcs": "./vendor/bin/phpcs src/ --report-full --report-source --standard=PSR2 --colors"
  }
}
